---
import Layout from '../layouts/Layout.astro';
import Card from '../components/ui/card.astro';
import Greeting from '../components/Greeting.astro';
---

<Layout>
	<Greeting />
	<main class="container mx-auto px-4 py-8 max-w-6xl card-container">
		<div class="cards-grid">
			<Card svgFile="dom.svg">
				<div class="card-text-overlay">
					<h1 class="card-main-title">Szertartas</h1>
					<p class="card-subtitle">Szegedi Dom 14:00</p>
				</div>
			</Card>
			<Card svgFile="csarda.svg">
				<div class="card-text-overlay">
					<h1 class="card-main-title">Lakodalom</h1>
					<p class="card-subtitle">Rozsa Sandor Csarda 18:00</p>
				</div>
			</Card>
		</div>
	</main>
</Layout>

<style>
	.card-container {
		overflow: visible;
	}

	.cards-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
	}

	@media (max-width: 768px) {
		.cards-grid {
			grid-template-columns: 1fr;
		}
	}

	.card-text-overlay {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.card-main-title {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.02em;
		color: #1a1a1a;
		margin: 0;
	}

	.card-subtitle {
		font-size: 1.25rem;
		font-weight: 400;
		line-height: 1.5;
		color: #4a4a4a;
		margin: 0;
	}

	@media (max-width: 640px) {
		.card-main-title {
			font-size: 2.25rem;
		}
		
		.card-subtitle {
			font-size: 1.125rem;
		}
	}
</style>
