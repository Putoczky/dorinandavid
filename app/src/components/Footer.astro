---
interface Props {
	id?: string;
}
const { id } = Astro.props;
---

<footer class="footer" id={id}>
	<div class="footer-inner">
		<div class="footer-grid">
			<div class="footer-block footer-block--locations">
				<span class="footer-label">Helyszínek</span>
				<div class="footer-locations">
					<div class="footer-location-block">
						<p class="footer-location">Szegedi Dóm</p>
						<a href="https://www.google.com/maps/search/?api=1&query=Szegedi+Dóm,+Szeged,+Hungary" class="footer-btn" target="_blank" rel="noopener noreferrer">Megtekintés a térképen</a>
					</div>
					<div class="footer-location-block">
						<p class="footer-location">Rózsa Sándor Csárda</p>
						<a href="https://www.google.com/maps/search/?api=1&query=Rózsa+Sándor+Csárda,+Zsombó,+Hungary" class="footer-btn" target="_blank" rel="noopener noreferrer">Megtekintés a térképen</a>
					</div>
				</div>
			</div>
			<div class="footer-block footer-block--date">
				<span class="footer-label">Dátum</span>
				<p class="footer-date">Szeged, 2026. Április 18.</p>
				<a href="/calendar.ics" class="footer-btn" download>
					Felveszem a naptárba
				</a>
			</div>
			<div class="footer-block footer-block--contact">
				<span class="footer-label">Kapcsolat</span>
				<a href="mailto:info@dorinandavid.wedding" class="footer-email">info@dorinandavid.wedding</a>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer {
		width: 100%;
		padding: 2.5rem 0;
		background: #0f0f0f;
		color: rgba(255, 255, 255, 0.9);
		position: relative;
		z-index: 1;
	}

	.footer-inner {
		max-width: 1200px;
		width: 100%;
		margin: 0 auto;
		padding: 0 0.875rem;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 2rem 1.5rem;
		align-items: start;
	}

	.footer-block {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-label {
		font-family: "Cinzel", "Times New Roman", Georgia, serif;
		font-size: 0.625rem;
		font-weight: 600;
		letter-spacing: 0.2em;
		text-transform: uppercase;
		color: rgba(255, 255, 255, 0.5);
	}

	.footer-locations {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.footer-location-block {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-location {
		margin: 0;
		font-size: 0.9375rem;
		color: rgba(255, 255, 255, 0.9);
		font-family: "Cinzel", "Times New Roman", Georgia, serif;
	}

	.footer-date {
		margin: 0;
		font-size: 0.9375rem;
		color: rgba(255, 255, 255, 0.9);
		font-family: "Cinzel", "Times New Roman", Georgia, serif;
	}

	.footer-btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		min-height: 2.25rem;
		padding: 0.35rem 0.75rem;
		font-family: "Cinzel", "Times New Roman", Georgia, serif;
		font-size: 0.6875rem;
		font-weight: 500;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: rgba(255, 255, 255, 0.9);
		background: transparent;
		border: 1px solid rgba(255, 255, 255, 0.35);
		border-radius: 2px;
		text-decoration: none;
		transition: border-color 0.2s ease, color 0.2s ease, background 0.2s ease;
	}

	.footer-btn:hover {
		color: #ffffff;
		border-color: rgba(255, 255, 255, 0.6);
		background: rgba(255, 255, 255, 0.05);
		text-decoration: none;
	}

	.footer-email {
		font-size: 0.9375rem;
		color: rgba(255, 255, 255, 0.9);
		font-family: "Cinzel", "Times New Roman", Georgia, serif;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.footer-email:hover {
		color: #ffffff;
		text-decoration: underline;
	}

	@media (max-width: 768px) {
		.footer {
			padding: 2rem 0;
		}

		.footer-inner {
			padding: 0 0.625rem;
		}

		.footer-grid {
			grid-template-columns: 1fr;
			gap: 1.75rem;
			text-align: center;
		}

		.footer-block {
			align-items: center;
		}

		.footer-location-block {
			align-items: center;
		}
	}

	@media (max-width: 640px) {
		.footer {
			padding: 1.5rem 0;
		}

		.footer-inner {
			padding: 0 0.5rem;
		}

		.footer-grid {
			gap: 1.5rem;
		}

		.footer-btn {
			min-height: 2.25rem;
			padding: 0.35rem 0.75rem;
		}

		.footer-location,
		.footer-date {
			font-size: 0.875rem;
		}
	}
</style>
