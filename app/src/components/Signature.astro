---
interface Props {
	currentPage?: 'home' | 'meghivo' | 'dresscode' | 'program' | 'rsvp';
}
const { currentPage = 'home' } = Astro.props;
---

<header class="site-header">
	<nav class="header-nav">
		<div class="header-top-row">
			<div class="header-left">
				<h1 class="header-title">
					<a href="/" class="header-title-link">DORINA & DÁVID</a>
				</h1>
			</div>
			<div class="header-center">
				<p class="header-save-the-date">
					<span class="header-save-the-date--save">SAVE</span>
					<span class="header-save-the-date--the">The</span>
					<span class="header-save-the-date--date">DATE</span>
				</p>
				<span class="header-nav-divider" aria-hidden="true"></span>
			</div>
			<div class="header-right">
				<p class="header-date">2026. április 18.</p>
			</div>
		</div>
		<div class="header-links-row">
			<div class="header-links">
				<a href="/#meghivo" class:list={['header-link', { 'header-link--active': currentPage === 'meghivo' }]}>Meghívó</a>
				<span class="header-link-sep" aria-hidden="true"></span>
				<a href="/#dresscode" class:list={['header-link', { 'header-link--active': currentPage === 'dresscode' }]}>Dresscode</a>
				<span class="header-link-sep" aria-hidden="true"></span>
				<a href="/#program" class:list={['header-link', { 'header-link--active': currentPage === 'program' }]}>Program</a>
				<span class="header-link-sep" aria-hidden="true"></span>
				<a href="/rsvp" class:list={['header-link', { 'header-link--active': currentPage === 'rsvp' }]}>Visszajelzés</a>
			</div>
		</div>
	</nav>
</header>

<style>
	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		width: 100%;
		z-index: 100;
		background: rgba(255, 255, 255, 0.96);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		border-bottom: 1px solid rgba(0, 0, 0, 0.08);
	}

	.header-nav {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0.5rem 0.875rem;
		min-height: 3.5rem;
		gap: 0.25rem;
	}

	.header-top-row {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 5rem;
		flex-wrap: wrap;
	}

	.header-left {
		display: flex;
		align-items: center;
		min-width: 0;
	}

	.header-center {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	.header-right {
		display: flex;
		align-items: center;
		min-width: 0;
	}

	.header-links-row {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
	}


	.header-title {
		margin: 0;
		white-space: nowrap;
	}

	.header-title-link {
		font-family: Optima, "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
		font-size: clamp(1.25rem, 4.5vw, 1.875rem);
		font-weight: 500;
		letter-spacing: 0.1em;
		color: #0a0a0a;
		text-decoration: none;
		transition: color 0.2s ease, opacity 0.2s ease, transform 0.25s ease;
	}

	.header-title-link:hover {
		color: #2a2a2a;
		opacity: 0.9;
		transform: translateY(-1px);
	}

	.header-title-link:active {
		transform: translateY(0);
	}

	.header-date {
		margin: 0;
		font-family: Optima, "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
		font-size: clamp(1.25rem, 4.5vw, 1.875rem);
		font-weight: 500;
		letter-spacing: 0.1em;
		color: #0a0a0a;
		white-space: nowrap;
	}

	.header-center {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 0;
		gap: 0.25rem;
	}

	.header-save-the-date {
		margin: 0;
		text-align: center;
		font-size: clamp(1.25rem, 4.5vw, 1.875rem);
		letter-spacing: 0.2em;
		color: #0a0a0a;
		line-height: 1.35;
	}

	.header-save-the-date--save,
	.header-save-the-date--the,
	.header-save-the-date--date {
		display: block;
	}

	.header-save-the-date--save,
	.header-save-the-date--date {
		font-family: Optima, "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
		font-weight: 400;
	}

	.header-save-the-date--the {
		font-family: "Snell Roundhand", "Apple Chancery", "Brush Script MT", cursive;
		font-weight: 400;
	}

	.header-nav-divider {
		display: block;
		width: 1.25rem;
		height: 1px;
		background: linear-gradient(to right, transparent, rgba(0, 0, 0, 0.2) 50%, transparent);
	}

	.header-links {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		gap: 0 1rem;
		flex-shrink: 0;
	}


	.header-link {
		font-family: Optima, "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
		font-size: 0.8125rem;
		font-weight: 500;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		color: rgba(10, 10, 10, 0.6);
		text-decoration: none;
		white-space: nowrap;
		padding: 0.5rem 0.75rem;
		border: 1px solid transparent;
		border-radius: 4px;
		transition: color 0.2s ease;
	}

	.header-link:hover {
		color: #0a0a0a;
		text-decoration: none;
	}

	.header-link--active {
		color: #0a0a0a;
		font-weight: 600;
		border-color: transparent;
		background-color: rgba(0, 0, 0, 0.03);
	}

	.header-link--highlight {
		font-weight: 600;
		background-color: #0a0a0a;
		color: #ffffff;
		border-color: #0a0a0a;
	}

	.header-link--highlight:hover {
		color: #ffffff;
		background-color: #2a2a2a;
	}

	.header-link--active.header-link--highlight {
		background-color: #0a0a0a;
		border-color: #0a0a0a;
	}

	.header-link--active.header-link--highlight:hover {
		background-color: #2a2a2a;
	}

	.header-link-sep {
		width: 4px;
		height: 4px;
		border-radius: 50%;
		background: rgba(0, 0, 0, 0.25);
		flex-shrink: 0;
	}

	@media (max-width: 768px) {
		.header-nav {
			padding: 0.4rem 0.625rem;
			gap: 0.25rem;
		}

		.header-top-row {
			width: 100%;
			flex-direction: column;
			gap: 0.25rem;
		}

		.header-left {
			width: 100%;
			justify-content: center;
			order: 1;
		}

		.header-title-link {
			font-size: 1.125rem;
			letter-spacing: 0.08em;
		}

		.header-date {
			font-size: 1.125rem;
			letter-spacing: 0.08em;
		}

		.header-center {
			width: 100%;
			padding: 0.0625rem 0;
			order: 2;
		}

		.header-save-the-date {
			font-size: clamp(0.875rem, 4vw, 1.25rem);
			letter-spacing: 0.1em;
		}

		.header-right {
			width: 100%;
			justify-content: center;
			order: 3;
		}

		.header-links-row {
			width: 100%;
			flex-direction: column;
			align-items: center;
			gap: 0.25rem;
		}

		.header-links {
			justify-content: center;
			gap: 0 1.25rem;
		}

		.header-link {
			font-size: 0.75rem;
			padding: 0.4rem 0.6rem;
		}

		.header-link-sep {
			display: none;
		}
	}

	@media (max-width: 640px) {
		.header-nav {
			padding: 0.35rem 0.5rem;
			gap: 0.2rem;
		}

		.header-title-link {
			font-size: clamp(0.875rem, 4vw, 1.25rem);
			letter-spacing: 0.06em;
		}

		.header-date {
			font-size: clamp(0.875rem, 4vw, 1.25rem);
			letter-spacing: 0.06em;
		}

		.header-links {
			gap: 0 1rem;
		}

		.header-link {
			font-size: 0.6875rem;
			padding: 0.35rem 0.5rem;
		}
	}
</style>
