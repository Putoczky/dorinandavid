<div class="signature-container">
	<div class="signature-content">
		<svg class="signature-svg" viewBox="0 0 200 90" xmlns="http://www.w3.org/2000/svg">
			<text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" class="signature-text">
				David
			</text>
		</svg>
		<div class="signature-ampersand">&</div>
		<svg class="signature-svg" viewBox="0 0 300 90" xmlns="http://www.w3.org/2000/svg">
			<text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" class="signature-text">
				Dorina
			</text>
		</svg>
	</div>
</div>

<style>
	.signature-container {
		padding: 10rem 1rem 1rem 1rem;
		text-align: center;
		max-width: 100%;
		margin: 0 auto;
		position: relative;
		z-index: 2;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.signature-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0rem;
	}

	.signature-svg {
		width: auto;
		height: 90px;
		margin: 0;
		display: block;
		overflow: visible;
	}

	.signature-ampersand {
		font-family: 'Cinzel', serif;
		font-size: 48px;
		font-weight: 400;
		color: #0d0c16;
		line-height: 1;
		margin: 0.25rem 0;
	}

	.signature-text {
		font-family: 'Cinzel', serif;
		font-size: 60px;
		font-weight: 400;
		fill: none;
		stroke: #0d0c16;
		stroke-width: 2;
		stroke-linecap: round;
		stroke-linejoin: round;
		stroke-dasharray: 2500;
		stroke-dashoffset: 2500;
		/* Animation will be triggered by JavaScript when in viewport */
	}
	
	.signature-text.animate {
		animation: drawStroke 4s ease-in-out forwards;
	}

	@keyframes drawStroke {
		to {
			stroke-dashoffset: 0;
		}
	}

	@media (max-width: 768px) {
		.signature-container {
			padding: 3rem 1rem 1rem 1rem;
		}
		.signature-svg {
			height: 70px;
		}
		.signature-text {
			font-size: 45px;
		}
		.signature-ampersand {
			font-size: 36px;
		}
	}

	@media (max-width: 640px) {
		.signature-container {
			padding: 2.5rem 1rem 0.75rem 1rem;
		}
		.signature-svg {
			height: 60px;
		}
		.signature-text {
			font-size: 40px;
		}
		.signature-ampersand {
			font-size: 32px;
		}
	}
</style>

<script>
	function initSignatureAnimation() {
		const signatureContainer = document.querySelector('.signature-container');
		const signatureTexts = document.querySelectorAll('.signature-text');
		
		if (!signatureContainer || signatureTexts.length === 0) return;
		
		// Check if already animated
		if (signatureTexts[0].classList.contains('animate')) return;
		
		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						signatureTexts.forEach((text) => {
							text.classList.add('animate');
						});
						observer.unobserve(entry.target);
					}
				});
			},
			{
				threshold: 0.1, // Trigger when 10% of the element is visible
				rootMargin: '100px', // Start animation 100px before element enters viewport
			}
		);
		
		observer.observe(signatureContainer);
	}
	
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initSignatureAnimation);
	} else {
		initSignatureAnimation();
	}
</script>

