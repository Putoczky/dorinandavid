---
const events = [
	{ time: '15:00', label: 'Gyülekező', side: 'left', icon: 'church' },
	{ time: '15:30', label: 'Szertartás', side: 'right', icon: 'rings' },
	{ time: '16:30', label: 'Vendégvárás', side: 'left', icon: 'champagne' },
	{ time: '17:30', label: 'Fotózkodás', side: 'right', icon: 'camera' },
	{ time: '19:00', label: 'Vacsora', side: 'left', icon: 'plate' },
	{ time: '21:00', label: 'Nyitótánc', side: 'right', icon: 'dance' },
	{ time: '22:00', label: 'Torta', side: 'left', icon: 'cake' },
	{ time: '00:00', label: 'Menyecsketánc', side: 'right', icon: 'shoes' },
	{ time: '00:30', label: 'Éjféli vacsora', side: 'left', icon: 'steak' },
];
---

<section id="program" class="timeline-section">
	<div class="timeline-inner">
		<h2 class="timeline-heading">Program</h2>
		<div class="timeline">
			<div class="timeline-line" aria-hidden="true"></div>
			{events.map((event, i) => (
				<div class={`timeline-item timeline-item--${event.side}`}>
					<div class="timeline-item-content">
						<div class="timeline-item-icon" aria-hidden="true">
							{event.icon === 'church' && (
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<path d="M12 2v4M4 10h16M6 10v10h4v-6h4v6h4V10M4 10l8-6 8 6" />
								</svg>
							)}
							{event.icon === 'rings' && (
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<circle cx="12" cy="12" r="4" />
									<circle cx="16" cy="12" r="4" />
									<path d="M8 12h2M14 12h2" />
								</svg>
							)}
							{event.icon === 'champagne' && (
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<path d="M8 21h8M8 14v7M16 14v7M12 2v3M9 5h6M8 5v9h8V5" />
									<circle cx="12" cy="10" r="1" fill="currentColor" />
								</svg>
							)}
							{event.icon === 'camera' && (
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<rect x="2" y="6" width="20" height="14" rx="2" />
									<circle cx="12" cy="13" r="3" />
									<path d="M16 6h1a2 2 0 0 1 2 2v1M8 6H7a2 2 0 0 0-2 2v1" />
								</svg>
							)}
							{event.icon === 'plate' && (
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<circle cx="12" cy="12" r="8" />
									<path d="M8 8h8M8 16h8" />
									<path d="M12 5v2M12 17v2M5 12h2M17 12h2" />
								</svg>
							)}
							{event.icon === 'dance' && (
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<circle cx="9" cy="8" r="2" />
									<circle cx="15" cy="10" r="2" />
									<path d="M9 10v6M15 12v4M9 16l3-2 3 2" />
									<path d="M12 14l2-4 2 2" />
								</svg>
							)}
							{event.icon === 'cake' && (
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<path d="M12 2v6M8 8v12h8V8M8 8h8M6 22h12" />
									<path d="M10 12h4M9 16h6" />
									<circle cx="12" cy="5" r="1" fill="currentColor" />
								</svg>
							)}
							{event.icon === 'shoes' && (
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<path d="M4 14h4l2-6 2 6h4M4 14v4h16v-4M6 18v2M18 18v2" />
									<path d="M6 10l2-4h8l2 4" />
								</svg>
							)}
							{event.icon === 'steak' && (
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<ellipse cx="12" cy="14" rx="6" ry="4" />
									<path d="M6 14v2M18 14v2M8 12l-2-1M16 12l2-1" />
								</svg>
							)}
						</div>
						<div class="timeline-item-text">
							<span class="timeline-time">{event.time}</span>
							<span class="timeline-label">{event.label}</span>
						</div>
					</div>
					<div class="timeline-dot" aria-hidden="true"></div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.timeline-section {
		max-width: 800px;
		margin: 0 auto;
		padding: 4rem 1.5rem;
		position: relative;
		z-index: 2;
	}

	.timeline-inner {
		position: relative;
	}

	.timeline-heading {
		font-family: 'Cinzel', serif;
		font-size: 2rem;
		font-weight: 600;
		color: #0d0c16;
		margin: 0 0 3rem 0;
		text-align: center;
	}

	.timeline {
		position: relative;
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.timeline-line {
		position: absolute;
		left: 50%;
		top: 0;
		bottom: 0;
		width: 2px;
		background: #0d0c16;
		transform: translateX(-50%);
		border-radius: 1px;
	}

	.timeline-item {
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: center;
		gap: 1.5rem;
		min-height: 5rem;
		position: relative;
	}

	.timeline-item--left .timeline-item-content {
		grid-column: 1;
		justify-self: end;
		text-align: right;
		flex-direction: row-reverse;
	}

	.timeline-item--left .timeline-dot {
		grid-column: 2;
	}

	.timeline-item--right .timeline-item-content {
		grid-column: 3;
		justify-self: start;
		text-align: left;
	}

	.timeline-item--right .timeline-dot {
		grid-column: 2;
	}

	.timeline-item-content {
		display: flex;
		align-items: center;
		gap: 1rem;
		max-width: 280px;
		padding: 0.5rem 0;
	}

	.timeline-item--left .timeline-item-content {
		flex-direction: row-reverse;
	}

	.timeline-item-icon {
		width: 2.5rem;
		height: 2.5rem;
		flex-shrink: 0;
		color: #0d0c16;
		opacity: 0.85;
	}

	.timeline-item-icon svg {
		width: 100%;
		height: 100%;
		display: block;
	}

	.timeline-item-text {
		display: flex;
		flex-direction: column;
		gap: 0.15rem;
	}

	.timeline-time {
		font-family: 'Cinzel', serif;
		font-size: 0.875rem;
		font-weight: 600;
		color: rgba(90, 104, 64, 1);
		letter-spacing: 0.02em;
	}

	.timeline-label {
		font-family: 'Cinzel', serif;
		font-size: 1.125rem;
		font-weight: 500;
		color: #0d0c16;
	}

	.timeline-dot {
		width: 12px;
		height: 12px;
		border-radius: 50%;
		background: #0d0c16;
		border: none;
		flex-shrink: 0;
		grid-row: 1;
	}

	@media (max-width: 768px) {
		.timeline-line {
			left: 0;
			transform: none;
		}

		.timeline-item {
			grid-template-columns: auto 1fr;
			gap: 1rem;
			padding-left: 0;
		}

		.timeline-item--left .timeline-item-content,
		.timeline-item--right .timeline-item-content {
			grid-column: 2;
			justify-self: start;
			text-align: left;
			flex-direction: row;
			max-width: none;
		}

		.timeline-item--left .timeline-item-content {
			flex-direction: row;
		}

		.timeline-dot {
			grid-column: 1;
			grid-row: 1;
			justify-self: center;
			margin-left: 2px;
		}

		.timeline-item--left .timeline-dot,
		.timeline-item--right .timeline-dot {
			grid-column: 1;
		}

		.timeline-heading {
			font-size: 1.5rem;
			margin-bottom: 2rem;
		}

		.timeline-section {
			padding: 3rem 1rem;
		}
	}

	@media (max-width: 640px) {
		.timeline-label {
			font-size: 1rem;
		}

		.timeline-item-icon {
			width: 2rem;
			height: 2rem;
		}
	}
</style>
