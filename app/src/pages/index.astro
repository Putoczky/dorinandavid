---
import Layout from '../layouts/Layout.astro';
import Card from '../components/ui/card.astro';
import Invitation from '../components/Invitation.astro';
import Signature from '../components/Signature.astro';
import RSVP from '../components/RSVP.astro';
import Footer from '../components/Footer.astro';
import { Fragment } from 'astro/jsx-runtime';
---

<Layout>
	<div class="top-leafs">
		<img src="/top-leafs.png" alt="" class="top-leafs-image" />
	</div>
	<Invitation />
	<Signature />
	<main class="container mx-auto px-4 py-8 max-w-6xl card-container">
		<div class="cards-grid">
			<Card svgFile="dom.svg">
				<div class="card-text-overlay">
					<h1 class="card-main-title">Szertartas</h1>
					<p class="card-subtitle">Szegedi Dom 14:00</p>
				</div>
				<Fragment slot="back">
					<div class="card-back-details">
						<h2 class="card-back-title">Szertartás</h2>
						<div class="card-back-info">
							<p class="card-back-location">Szegedi Dóm</p>
							<p class="card-back-address">Szeged, Dóm tér 15</p>
							<p class="card-back-time">2026. április 18., 14:00</p>
							<p class="card-back-description">
								Az egyházi szertartás a Szegedi Dómban kerül megrendezésre. 
								Kérjük, hogy időben érkezzenek, hogy mindenki kényelmesen elhelyezkedhessen.
							</p>
						</div>
					</div>
				</Fragment>
			</Card>
			<Card svgFile="csarda.svg">
				<div class="card-text-overlay">
					<h1 class="card-main-title">Lakodalom</h1>
					<p class="card-subtitle">Rozsa Sandor Csarda 18:00</p>
				</div>
				<Fragment slot="back">
					<div class="card-back-details">
						<h2 class="card-back-title">Lakodalom</h2>
						<div class="card-back-info">
							<p class="card-back-location">Rózsa Sándor Csárda</p>
							<p class="card-back-address">Szeged, Rózsa Sándor út 1.</p>
							<p class="card-back-time">2026. április 18., 18:00</p>
							<p class="card-back-description">
								A szertartást követően szeretettel várunk benneteket a Rózsa Sándor Csárdában, 
								ahol együtt ünnepelhetjük ezt a különleges napot.
							</p>
						</div>
					</div>
				</Fragment>
			</Card>
		</div>
	</main>
	<div class="mt-16">
		<RSVP />
	</div>
	<Footer />
</Layout>

<style>
	.top-leafs {
		position: absolute !important;
		top: 0;
		left: 0;
		right: 0;
		width: 100%;
		max-width: 100vw;
		z-index: 1;
		pointer-events: none;
		overflow: hidden;
	}

	.top-leafs-image {
		width: 100%;
		height: auto;
		display: block;
	}

	.card-container {
		overflow: visible;
		width: 100%;
		max-width: 100%;
	}

	.cards-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
	}

	@media (max-width: 768px) {
		.cards-grid {
			grid-template-columns: 1fr;
		}
	}

	.card-text-overlay {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.card-main-title {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.02em;
		color: #0d0c16;
		margin: 0;
	}

	.card-subtitle {
		font-size: 1.25rem;
		font-weight: 400;
		line-height: 1.5;
		color: #0d0c16;
		margin: 0;
	}

	@media (max-width: 640px) {
		.card-main-title {
			font-size: 2.25rem;
		}
		
		.card-subtitle {
			font-size: 1.125rem;
		}
	}

	.card-back-details {
		width: 100%;
		max-width: 100%;
	}

	.card-back-title {
		font-size: 2.5rem;
		font-weight: 700;
		line-height: 1.2;
		color: #0d0c16;
		margin: 0 0 2rem 0;
		font-family: 'Style Script', cursive;
	}

	.card-back-info {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.card-back-location {
		font-size: 1.5rem;
		font-weight: 600;
		color: #0d0c16;
		margin: 0;
	}

	.card-back-address {
		font-size: 1.125rem;
		color: rgba(13, 12, 22, 0.8);
		margin: 0;
	}

	.card-back-time {
		font-size: 1.25rem;
		font-weight: 500;
		color: rgba(139, 115, 85, 1);
		margin: 0.5rem 0;
	}

	.card-back-description {
		font-size: 1rem;
		line-height: 1.6;
		color: rgba(13, 12, 22, 0.7);
		margin: 1rem 0 0 0;
		max-width: 500px;
	}

	@media (max-width: 640px) {
		.card-back-title {
			font-size: 2rem;
		}

		.card-back-location {
			font-size: 1.25rem;
		}

		.card-back-address {
			font-size: 1rem;
		}

		.card-back-time {
			font-size: 1.125rem;
		}

		.card-back-description {
			font-size: 0.9375rem;
		}
	}
</style>
