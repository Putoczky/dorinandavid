{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"types": ["@cloudflare/workers-types"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"baseUrl": ".",
		"paths": {
			"@app/*": ["../app/src/*"],
			"@worker/*": ["./*"]
		}
	}
}

